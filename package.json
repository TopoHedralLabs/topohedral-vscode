{
  "name": "topohedral-vscode",
  "displayName": "topohedral-vscode",
  "description": "An extension to provide some commonly used shortcuts and operations used in topohedral development",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext", 
    "onLanguage:rust", 
    "onLanguage:python",
    "onLanguage:shell"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "topohedral-vscode.addFold",
        "title": "Add Fold"
      }, 
      {
        "command": "topohedral-vscode.removeFold",
        "title": "Remove Fold"
      }
    ],
    "keybindings": [
      {
        "command": "topohedral-vscode.addFold",
        "key": "F8",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "topohedral-vscode.removeFold",
        "key": "F9",
        "when": "editorTextFocus && !editorReadonly"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "preunittest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "unittest": "mocha ./out/unit-test/*.test.js",
    "clean": "rm -rf node_modules out package-lock.json"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "typescript-collections": "^1.3.3"
  }
}
